{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "lib": ["DOM"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
  }
}
